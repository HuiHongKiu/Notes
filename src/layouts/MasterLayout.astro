---
import ThemeToggler from "../components/ThemeToggler.astro";
import { FilePenLine, Rows4 } from "lucide-astro";
import "../styles/master.css";

interface Props {
    title?: string;
}
const { title } = Astro.props;
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>
            {title ? `${title} - ` : ""} 上班摸魚人
        </title>
        <script>
            if (
                localStorage.theme === "dark" ||
                (!("theme" in localStorage) &&
                    window.matchMedia("(prefers-color-scheme: dark)").matches)
            ) {
                document.documentElement.classList.add("dark");
            } else {
                document.documentElement.classList.remove("dark");
            }
        </script>
    </head>
    <body>
        <div class="container px-sm py-md">
            <div class="flex flex-row items-center space-between">
                <a href="/Notes/content/list"><h1 class="text-md">摸魚的記錄平台</h1></a>
                <div class="flex gap-sm">
                    <div slot="appendButtons" class="flex flex-row gap-sm">
                        <a href="/Notes/content/list" class="editor-link"
                            ><Rows4 /></a
                        >
                        <a href="/Notes/content/editor" class="editor-link"
                            ><FilePenLine /></a
                        >
                    </div>
                    <ThemeToggler />
                </div>
            </div>
            <div class="py-lg">
                <slot />
            </div>
        </div>
    </body>
</html>
